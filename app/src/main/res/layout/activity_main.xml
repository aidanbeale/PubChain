<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pubchain.MainActivity">

    <TextView
        android:id="@+id/tokenCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BeerCoins"
        android:textAlignment="center"
        android:textColor="#2980b9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.665" />

    <Button
        android:id="@+id/purchaseDrinkButton"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:background="#2980b9"
        android:onClick="purchaseDrinkPressed"
        android:text="Purchase Drink"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <ImageView
        android:id="@+id/viewHistory"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:onClick="displayHistory"
        app:srcCompat="@drawable/history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/purchaseDrinkButton"
        app:layout_constraintVertical_bias="0.039" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="220dp"
        android:layout_height="216dp"
        app:srcCompat="@drawable/circle"
        app:layout_constraintBottom_toTopOf="@+id/tokenCountTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <TextView
        android:id="@+id/beerCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="#2980b9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        app:layout_constraintRight_toLeftOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="141dp"
        android:layout_height="38dp"
        android:text="Remaining"
        android:textAlignment="center"
        android:textColor="#2980b9"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="352dp" />

</android.support.constraint.ConstraintLayout>
